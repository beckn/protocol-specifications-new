@startuml
hide empty members
set namespaceSeparator none


class EnergyTradeContract {
    {field} string contractStatus {"PENDING", "ACTIVE", "COMPLETED", "TERMINATED"}
    {field} string sourceMeterId
    {field} string targetMeterId
    {field} string inverterId
    {field} number contractedQuantity
    {field} string (date-time) tradeStartTime
    {field} string (date-time) tradeEndTime
    {field} string sourceType {"SOLAR", "BATTERY", "GRID", "HYBRID", "RENEWABLE"}
    {field} object certification
    {field} object[] settlementCycles
    {field} object[] billingCycles
    {field} object wheelingCharges
    {field} string (date-time) lastUpdated
    {field} object remainingTradingLimit
}


@enduml
