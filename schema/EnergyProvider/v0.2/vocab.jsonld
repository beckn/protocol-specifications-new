{
  "@context": {
    "@version": 1.1,
    "beckn": "https://raw.githubusercontent.com/beckn/protocol-specifications-new/refs/heads/main/schema/core/v2/#",
    "schema": "https://schema.org/",
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
    "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
    "xsd": "http://www.w3.org/2001/XMLSchema#"
  },
  "@graph": [
    {
      "@id": "beckn:EnergyProvider",
      "@type": "rdfs:Class",
      "rdfs:label": "Energy Provider",
      "rdfs:comment": "Energy-specific provider attributes for P2P energy trading, including source meter identification."
    },
    {
      "@id": "beckn:sourceMeterId",
      "@type": "rdf:Property",
      "rdfs:label": "Source Meter ID",
      "rdfs:comment": "Source meter identifier in DER address format where energy originates. Validated by utility BPP.",
      "rdfs:domain": "beckn:EnergyProvider",
      "rdfs:range": "xsd:string"
    },
    {
      "@id": "beckn:sourceType",
      "@type": "rdf:Property",
      "rdfs:label": "Source type",
      "rdfs:comment": "Type of energy source (SOLAR, BATTERY, GRID, HYBRID, RENEWABLE).",
      "rdfs:domain": "beckn:EnergyProvider",
      "schema:rangeIncludes": "beckn:SourceType"
    },
    {
      "@id": "beckn:certification",
      "@type": "rdf:Property",
      "rdfs:label": "Certification",
      "rdfs:comment": "Energy certification details including status and certificates.",
      "rdfs:domain": "beckn:EnergyProvider",
      "schema:rangeIncludes": "schema:Thing"
    },
    {
      "@id": "beckn:certificates",
      "@type": "rdf:Property",
      "rdfs:label": "Certificates",
      "rdfs:comment": "Array of certificate references (URLs or identifiers).",
      "rdfs:domain": "beckn:EnergyProvider",
      "schema:rangeIncludes": ["schema:URL", "schema:ItemList"]
    },
    {
      "@id": "beckn:SourceType",
      "@type": "schema:Enumeration",
      "schema:name": "Source Type",
      "rdfs:comment": "Enumeration of energy source types.",
      "schema:hasEnumerationMember": [
        { "@id": "beckn:SourceTypeSolar" },
        { "@id": "beckn:SourceTypeBattery" },
        { "@id": "beckn:SourceTypeGrid" },
        { "@id": "beckn:SourceTypeHybrid" },
        { "@id": "beckn:SourceTypeRenewable" }
      ]
    },
    {
      "@id": "beckn:SourceTypeSolar",
      "@type": ["beckn:SourceType", "schema:Enumeration"],
      "schema:name": "SOLAR",
      "schema:identifier": "SOLAR"
    },
    {
      "@id": "beckn:SourceTypeBattery",
      "@type": ["beckn:SourceType", "schema:Enumeration"],
      "schema:name": "BATTERY",
      "schema:identifier": "BATTERY"
    },
    {
      "@id": "beckn:SourceTypeGrid",
      "@type": ["beckn:SourceType", "schema:Enumeration"],
      "schema:name": "GRID",
      "schema:identifier": "GRID"
    },
    {
      "@id": "beckn:SourceTypeHybrid",
      "@type": ["beckn:SourceType", "schema:Enumeration"],
      "schema:name": "HYBRID",
      "schema:identifier": "HYBRID"
    },
    {
      "@id": "beckn:SourceTypeRenewable",
      "@type": ["beckn:SourceType", "schema:Enumeration"],
      "schema:name": "RENEWABLE",
      "schema:identifier": "RENEWABLE"
    }
  ]
}

