{
  "@context": {
    "@version": 1.1,
    "beckn": "https://raw.githubusercontent.com/beckn/protocol-specifications-new/refs/heads/draft/schema/EnergyResource/v0.2/#",
    "schema": "https://schema.org/",
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
    "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
    "xsd": "http://www.w3.org/2001/XMLSchema#"
  },
  "@graph": [
    {
      "@id": "beckn:EnergyResource",
      "@type": "rdfs:Class",
      "rdfs:label": "Energy Resource",
      "rdfs:comment": "Represents a tradable energy resource in P2P energy trading, extending the core Item entity."
    },
    {
      "@id": "beckn:sourceType",
      "@type": "rdf:Property",
      "rdfs:label": "Source type",
      "rdfs:comment": "Type of energy source (SOLAR, BATTERY, GRID, HYBRID, RENEWABLE).",
      "rdfs:domain": "beckn:EnergyResource",
      "schema:rangeIncludes": "beckn:SourceType"
    },
    {
      "@id": "beckn:deliveryMode",
      "@type": "rdf:Property",
      "rdfs:label": "Delivery mode",
      "rdfs:comment": "Mode of energy delivery (EV_CHARGING, BATTERY_SWAP, V2G, GRID_INJECTION).",
      "rdfs:domain": "beckn:EnergyResource",
      "schema:rangeIncludes": "beckn:DeliveryMode"
    },
    {
      "@id": "beckn:certificationStatus",
      "@type": "rdf:Property",
      "rdfs:label": "Certification status",
      "rdfs:comment": "Carbon offset or green energy certification status.",
      "rdfs:domain": "beckn:EnergyResource",
      "schema:rangeIncludes": "schema:Text"
    },
    {
      "@id": "beckn:meterId",
      "@type": "rdf:Property",
      "rdfs:label": "Meter ID",
      "rdfs:comment": "Source meter identifier in DER address format (der://meter/{id}).",
      "rdfs:domain": "beckn:EnergyResource",
      "schema:rangeIncludes": "schema:Text"
    },
    {
      "@id": "beckn:inverterId",
      "@type": "rdf:Property",
      "rdfs:label": "Inverter ID",
      "rdfs:comment": "Inverter identifier serving as consistent interface between source and grid.",
      "rdfs:domain": "beckn:EnergyResource",
      "schema:rangeIncludes": "schema:Text"
    },
    {
      "@id": "beckn:availableQuantity",
      "@type": "rdf:Property",
      "rdfs:label": "Available quantity",
      "rdfs:comment": "Available energy quantity in kilowatt-hours (kWh).",
      "rdfs:domain": "beckn:EnergyResource",
      "schema:rangeIncludes": "schema:Number"
    },
    {
      "@id": "beckn:productionWindow",
      "@type": "rdf:Property",
      "rdfs:label": "Production window",
      "rdfs:comment": "Array of time windows when energy is produced or available for trading.",
      "rdfs:domain": "beckn:EnergyResource",
      "schema:rangeIncludes": ["schema:ItemList", "schema:TimePeriod"]
    },
    {
      "@id": "beckn:sourceVerification",
      "@type": "rdf:Property",
      "rdfs:label": "Source verification",
      "rdfs:comment": "Source verification details including certificates and verification status.",
      "rdfs:domain": "beckn:EnergyResource",
      "schema:rangeIncludes": "schema:Thing"
    },
    {
      "@id": "beckn:verified",
      "@type": "rdf:Property",
      "rdfs:label": "Verified",
      "rdfs:comment": "Whether the source has been verified.",
      "rdfs:domain": "beckn:EnergyResource",
      "schema:rangeIncludes": "schema:Boolean"
    },
    {
      "@id": "beckn:verificationDate",
      "@type": "rdf:Property",
      "rdfs:label": "Verification date",
      "rdfs:comment": "Date when source was last verified.",
      "rdfs:domain": "beckn:EnergyResource",
      "schema:rangeIncludes": "schema:DateTime"
    },
    {
      "@id": "beckn:certificates",
      "@type": "rdf:Property",
      "rdfs:label": "Certificates",
      "rdfs:comment": "Array of certificate references (URLs or identifiers).",
      "rdfs:domain": "beckn:EnergyResource",
      "schema:rangeIncludes": ["schema:URL", "schema:ItemList"]
    },
    {
      "@id": "beckn:productionAsynchronous",
      "@type": "rdf:Property",
      "rdfs:label": "Production asynchronous",
      "rdfs:comment": "Whether production and trade may be asynchronous (before, during, or after the transaction).",
      "rdfs:domain": "beckn:EnergyResource",
      "schema:rangeIncludes": "schema:Boolean"
    },
    {
      "@id": "beckn:SourceType",
      "@type": "schema:Enumeration",
      "schema:name": "Source Type",
      "rdfs:comment": "Enumeration of energy source types.",
      "schema:hasEnumerationMember": [
        { "@id": "beckn:SourceTypeSolar" },
        { "@id": "beckn:SourceTypeBattery" },
        { "@id": "beckn:SourceTypeGrid" },
        { "@id": "beckn:SourceTypeHybrid" },
        { "@id": "beckn:SourceTypeRenewable" }
      ]
    },
    {
      "@id": "beckn:SourceTypeSolar",
      "@type": ["beckn:SourceType", "schema:Enumeration"],
      "schema:name": "SOLAR",
      "schema:identifier": "SOLAR"
    },
    {
      "@id": "beckn:SourceTypeBattery",
      "@type": ["beckn:SourceType", "schema:Enumeration"],
      "schema:name": "BATTERY",
      "schema:identifier": "BATTERY"
    },
    {
      "@id": "beckn:SourceTypeGrid",
      "@type": ["beckn:SourceType", "schema:Enumeration"],
      "schema:name": "GRID",
      "schema:identifier": "GRID"
    },
    {
      "@id": "beckn:SourceTypeHybrid",
      "@type": ["beckn:SourceType", "schema:Enumeration"],
      "schema:name": "HYBRID",
      "schema:identifier": "HYBRID"
    },
    {
      "@id": "beckn:SourceTypeRenewable",
      "@type": ["beckn:SourceType", "schema:Enumeration"],
      "schema:name": "RENEWABLE",
      "schema:identifier": "RENEWABLE"
    },
    {
      "@id": "beckn:DeliveryMode",
      "@type": "schema:Enumeration",
      "schema:name": "Delivery Mode",
      "rdfs:comment": "Enumeration of energy delivery modes.",
      "schema:hasEnumerationMember": [
        { "@id": "beckn:DeliveryModeEvCharging" },
        { "@id": "beckn:DeliveryModeBatterySwap" },
        { "@id": "beckn:DeliveryModeV2G" },
        { "@id": "beckn:DeliveryModeGridInjection" }
      ]
    },
    {
      "@id": "beckn:DeliveryModeEvCharging",
      "@type": ["beckn:DeliveryMode", "schema:Enumeration"],
      "schema:name": "EV_CHARGING",
      "schema:identifier": "EV_CHARGING",
      "schema:alternateName": "EV-CHARGING"
    },
    {
      "@id": "beckn:DeliveryModeBatterySwap",
      "@type": ["beckn:DeliveryMode", "schema:Enumeration"],
      "schema:name": "BATTERY_SWAP",
      "schema:identifier": "BATTERY_SWAP",
      "schema:alternateName": "BATTERY-SWAP"
    },
    {
      "@id": "beckn:DeliveryModeV2G",
      "@type": ["beckn:DeliveryMode", "schema:Enumeration"],
      "schema:name": "V2G",
      "schema:identifier": "V2G"
    },
    {
      "@id": "beckn:DeliveryModeGridInjection",
      "@type": ["beckn:DeliveryMode", "schema:Enumeration"],
      "schema:name": "GRID_INJECTION",
      "schema:identifier": "GRID_INJECTION",
      "schema:alternateName": "GRID-INJECTION"
    }
  ]
}

