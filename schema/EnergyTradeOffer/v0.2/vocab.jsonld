{
  "@context": {
    "@version": 1.1,
    "beckn": "https://raw.githubusercontent.com/beckn/protocol-specifications-new/refs/heads/draft/schema/EnergyTradeOffer/v0.2/#",
    "schema": "https://schema.org/",
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
    "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
    "xsd": "http://www.w3.org/2001/XMLSchema#"
  },
  "@graph": [
    {
      "@id": "beckn:EnergyTradeOffer",
      "@type": "rdfs:Class",
      "rdfs:label": "Energy Trade Offer",
      "rdfs:comment": "An offer specification for P2P energy trading, extending the core Offer entity."
    },
    {
      "@id": "beckn:pricingModel",
      "@type": "rdf:Property",
      "rdfs:label": "Pricing model",
      "rdfs:comment": "Pricing model classification (PER_KWH, TIME_OF_DAY, SUBSCRIPTION, FIXED).",
      "rdfs:domain": "beckn:EnergyTradeOffer",
      "schema:rangeIncludes": "beckn:PricingModel"
    },
    {
      "@id": "beckn:settlementType",
      "@type": "rdf:Property",
      "rdfs:label": "Settlement type",
      "rdfs:comment": "Settlement frequency for the energy trade (REAL_TIME, HOURLY, DAILY, WEEKLY, MONTHLY).",
      "rdfs:domain": "beckn:EnergyTradeOffer",
      "schema:rangeIncludes": "beckn:SettlementType"
    },
    {
      "@id": "beckn:wheelingCharges",
      "@type": "rdf:Property",
      "rdfs:label": "Wheeling charges",
      "rdfs:comment": "Utility wheeling charges for delivery intermediaries.",
      "rdfs:domain": "beckn:EnergyTradeOffer",
      "schema:rangeIncludes": "schema:PriceSpecification"
    },
    {
      "@id": "beckn:minimumQuantity",
      "@type": "rdf:Property",
      "rdfs:label": "Minimum quantity",
      "rdfs:comment": "Minimum tradable energy quantity in kilowatt-hours (kWh).",
      "rdfs:domain": "beckn:EnergyTradeOffer",
      "schema:rangeIncludes": "schema:Number"
    },
    {
      "@id": "beckn:maximumQuantity",
      "@type": "rdf:Property",
      "rdfs:label": "Maximum quantity",
      "rdfs:comment": "Maximum tradable energy quantity in kilowatt-hours (kWh).",
      "rdfs:domain": "beckn:EnergyTradeOffer",
      "schema:rangeIncludes": "schema:Number"
    },
    {
      "@id": "beckn:validityWindow",
      "@type": "rdf:Property",
      "rdfs:label": "Validity window",
      "rdfs:comment": "Time window when the offer is valid.",
      "rdfs:domain": "beckn:EnergyTradeOffer",
      "schema:rangeIncludes": "schema:TimePeriod"
    },
    {
      "@id": "beckn:timeOfDayRates",
      "@type": "rdf:Property",
      "rdfs:label": "Time of day rates",
      "rdfs:comment": "Time-of-day pricing rates (applicable when pricingModel is TIME_OF_DAY).",
      "rdfs:domain": "beckn:EnergyTradeOffer",
      "schema:rangeIncludes": "schema:ItemList"
    },
    {
      "@id": "schema:priceSpecification",
      "@type": "rdf:Property",
      "rdfs:label": "Price",
      "rdfs:comment": "Price per unit for this specific time window. User's requested quantity is specified in OrderItem.beckn:quantity.",
      "rdfs:domain": "beckn:EnergyTradeOffer",
      "schema:rangeIncludes": "schema:PriceSpecification"
    },
    {
      "@id": "schema:QuantitativeValue",
      "@type": "rdf:Property",
      "rdfs:label": "Max Quantity",
      "rdfs:comment": "Maximum quantity offered/available in this specific time window (hour). Time-window specific, distinct from maximumQuantity which is the overall offer limit.",
      "rdfs:domain": "beckn:EnergyTradeOffer",
      "schema:rangeIncludes": "schema:QuantitativeValue"
    },
    {
      "@id": "schema:availableAt",
      "@type": "rdf:Property",
      "rdfs:label": "Time Window",
      "rdfs:comment": "Specific time period (hour) when energy delivery occurs. Different from validityWindow which indicates when the offer can be selected.",
      "rdfs:domain": "beckn:EnergyTradeOffer",
      "schema:rangeIncludes": "schema:TimePeriod"
    },
    {
      "@id": "beckn:PricingModel",
      "@type": "schema:Enumeration",
      "schema:name": "Pricing Model",
      "rdfs:comment": "Enumeration of supported pricing models for energy trade offers.",
      "schema:hasEnumerationMember": [
        { "@id": "beckn:PricingModelPerKwh" },
        { "@id": "beckn:PricingModelTimeOfDay" },
        { "@id": "beckn:PricingModelSubscription" },
        { "@id": "beckn:PricingModelFixed" }
      ]
    },
    {
      "@id": "beckn:PricingModelPerKwh",
      "@type": ["beckn:PricingModel", "schema:Enumeration"],
      "schema:name": "PER_KWH",
      "schema:identifier": "PER_KWH",
      "schema:alternateName": "PER-KWH"
    },
    {
      "@id": "beckn:PricingModelTimeOfDay",
      "@type": ["beckn:PricingModel", "schema:Enumeration"],
      "schema:name": "TIME_OF_DAY",
      "schema:identifier": "TIME_OF_DAY",
      "schema:alternateName": "TIME-OF-DAY"
    },
    {
      "@id": "beckn:PricingModelSubscription",
      "@type": ["beckn:PricingModel", "schema:Enumeration"],
      "schema:name": "SUBSCRIPTION",
      "schema:identifier": "SUBSCRIPTION"
    },
    {
      "@id": "beckn:PricingModelFixed",
      "@type": ["beckn:PricingModel", "schema:Enumeration"],
      "schema:name": "FIXED",
      "schema:identifier": "FIXED"
    },
    {
      "@id": "beckn:SettlementType",
      "@type": "schema:Enumeration",
      "schema:name": "Settlement Type",
      "rdfs:comment": "Enumeration of settlement frequencies for energy trades.",
      "schema:hasEnumerationMember": [
        { "@id": "beckn:SettlementTypeRealTime" },
        { "@id": "beckn:SettlementTypeHourly" },
        { "@id": "beckn:SettlementTypeDaily" },
        { "@id": "beckn:SettlementTypeWeekly" },
        { "@id": "beckn:SettlementTypeMonthly" }
      ]
    },
    {
      "@id": "beckn:SettlementTypeRealTime",
      "@type": ["beckn:SettlementType", "schema:Enumeration"],
      "schema:name": "REAL_TIME",
      "schema:identifier": "REAL_TIME",
      "schema:alternateName": "REAL-TIME"
    },
    {
      "@id": "beckn:SettlementTypeHourly",
      "@type": ["beckn:SettlementType", "schema:Enumeration"],
      "schema:name": "HOURLY",
      "schema:identifier": "HOURLY"
    },
    {
      "@id": "beckn:SettlementTypeDaily",
      "@type": ["beckn:SettlementType", "schema:Enumeration"],
      "schema:name": "DAILY",
      "schema:identifier": "DAILY"
    },
    {
      "@id": "beckn:SettlementTypeWeekly",
      "@type": ["beckn:SettlementType", "schema:Enumeration"],
      "schema:name": "WEEKLY",
      "schema:identifier": "WEEKLY"
    },
    {
      "@id": "beckn:SettlementTypeMonthly",
      "@type": ["beckn:SettlementType", "schema:Enumeration"],
      "schema:name": "MONTHLY",
      "schema:identifier": "MONTHLY"
    }
  ]
}

