    "compactCard": {
      "name": "EV Charging Service Compact Card",
      "description": "Minimal card view for grid/list layouts",
      "html": "<div class=\"ev-charging-compact\" data-item-id=\"{{beckn:id}}\">\n  <div class=\"compact-header\">\n    <h4>{{beckn:descriptor.schema:name}}</h4>\n    <span class=\"charging-speed-badge speed-{{beckn:itemAttributes.chargingSpeed}}\">{{beckn:itemAttributes.chargingSpeed}}</span>\n  </div>\n  <div class=\"compact-location\">{{beckn:itemAttributes.serviceLocation.address.addressLocality}}</div>\n  <div class=\"compact-specs\">\n    <span class=\"compact-spec\">{{beckn:itemAttributes.connectorType}}</span>\n    <span class=\"compact-spec\">{{beckn:itemAttributes.maxPowerKW}}kW</span>\n    <span class=\"compact-spec\">{{beckn:itemAttributes.socketCount}} sockets</span>\n  </div>\n  <div class=\"compact-status status-{{beckn:itemAttributes.stationStatus}}\">{{beckn:itemAttributes.stationStatus}}</div>\n  <div class=\"compact-price\">{{beckn:offers[0].beckn:price.currency}} {{beckn:offers[0].beckn:price.value}}/{{beckn:offers[0].beckn:price.applicableQuantity.unitText}}</div>\n</div>",
      "dataPaths": {
