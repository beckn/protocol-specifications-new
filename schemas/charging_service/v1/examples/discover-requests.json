{
  "discover_requests": [
    {
      "title": "EV charging within a circular boundary",
      "description": "Find stations within 10 km of the user’s point.",
      "example": {
        "context": {
          "version": "2.0.0",
          "action": "discover",
          "timestamp": "2025-10-14T07:00:00Z",
          "message_id": "MSG-CIRC-001",
          "transaction_id": "TRX-CIRC-001",
          "bap_id": "app.example.com",
          "bap_uri": "https://app.example.com/bap",
          "ttl": "PT30S",
          "schema_context": [
            "https://schemas.example.org/profiles/ev-charging/charging_service/v1/context.jsonld"
          ]
        },
        "message": {
          "spatial": [
            {
              "op": "s_dwithin",
              "targets": "$['beckn:availableAt'][*]['geo']",
              "geometry": { "type": "Point", "coordinates": [77.5900, 12.9400] },
              "distanceMeters": 10000
            }
          ],
          "pagination": { "page": 1, "limit": 10 }
        }
      }
    },
    {
